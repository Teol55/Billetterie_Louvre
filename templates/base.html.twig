<script>
    $('.dropdown-toggle').dropdown();

</script>

<script>
    $(document).ready(function(){
        var date_input=$('input[name="order_form[dateVisit]"]'); //our date input has the name "date"
        var container=$('.bootstrap-iso form').length>0 ? $('.bootstrap-iso form').parent() : "body";
        var options={
            language: "fr",
            format: 'yyyy-mm-dd ',
            container: container,
            todayHighlight: true,
            autoclose: true,
            startDate: '-3d',
            weekStart: 1,
            daysOfWeekDisabled: "2",
            endDate: "+1y",

        };
        date_input.datepicker(options);
    })
</script>
